{
  "$schema": "https://json.schemastore.org/jest",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": ".*e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "testEnvironment": "node",
  "setupFilesAfterEnv": [],
  "moduleNameMapper": {
    "^src/(.*)": "<rootDir>/src/$1"
  }
}
